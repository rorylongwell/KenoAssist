<div class="page">

            @model IList<IncidentReportModel>
    <div class="heading">

          <div class="vertical_align">

        <a href="@Url.Action("Client", "Client")">               

                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
<g>
    <path class="st27" d="M15.6,18l-6.9-5.5c-0.3-0.3-0.3-0.8,0-1L15.6,6"/>
</g>
                    </svg>

            <span>Back</span>
            </a>
        </div>

<h1 class="minus-margin-60">Incidents and Injuries</h1>
</div>

            <div class="client_info_bar">
        @{

                string profileUrl = ViewBag.ProfileImage;

                <img src="@Url.Content(profileUrl)">

      
             }     

<p class="client_details">@ViewBag.Name</p>
            </div>
    <div class="incident_container" >
       <div class="margin-top-4 default-menu" >

 
@foreach(var incident in Model){
<a style="overflow: hidden;" href="@Url.Action("Incident", "Incident", new { incidentId = incident.IncidentId })">

            
@{
                string url = incident.PhotoUrl.FirstOrDefault();
            <div id="imageContainer">
                <img src="@Url.Content(url)">
                </div>
                }


                <div class="details-left margin-top-16">
                    
 <p class="highlight-text">@incident.Injury, @incident.InjuryArea</p>
         
                     
                       </div>

                <div class="details-right incident_report_menu margin-top-16">  
                     <p class="title">@Common.GetDayName((DateTime)incident.Date,true)</p>
             
                    
                </div>
                
    <p class="margin-top-16 title incident_report_menu">Incident</p>
    <p class="margin-top-4 incident_character_limit">@incident.Description</p>
</a>
}
                </div>

    </div>
            @if(ViewBag.IsStaff){
              <a href="@Url.Action("AddIncident", "Incident")" class="button-bottom">Add Incident Report</a>
    }
            </div>

   
