<div class="page">

            @model IList<IncidentReportModel>
    <div class="heading">

          <div class="vertical_align">

        <a href="@Url.Action("Client", "Client")"><p class="return">&#10094 back</p></a>

            </div>

<h1 class="minus-margin-60">Incidents and Injuries</h1>
</div>


       <div class="content-margin default-menu">

        <div class="content-margin">
        @{
                string profileUrl = ViewBag.ProfileImage;
                <img src="@Url.Content(profileUrl)" style="width: 50px ">
                }
<p>@ViewBag.Name</p>
</div>
@foreach(var incident in Model){
<a href="@Url.Action("Incident", "Incident", new { incidentId = incident.IncidentId })">
@{
                string url = incident.PhotoUrl.FirstOrDefault();
                <img src="@Url.Content(url)" class="injury_img_clip">
                }
                <div class="details-left">
                    
 <p class="highlight-text">@incident.Injury, @incident.InjuryArea</p>
         
                     
                       </div>

                <div class="details-right">  
                     <p>@Common.GetDayName((DateTime)incident.Date)</p>
             
                    
                </div>
                
    <p class="margin-top-14 title">Incident</p>
    <p>@incident.Description</p>
</a>
}
                </div>

              <a href="@Url.Action("AddIncident", "Incident")" class="button-bottom">Add Report</a>
            </div>

   
