<div class="page">

            @model IList<IncidentModel>
    <div class="heading">

<h1>Incidents and Injuries</h1>

            <div class="margin-top-4 default-menu">
@foreach(var incident in Model){
<a href="@Url.Action("Incident", "Incident", new { incidentId = incident.Id })">

                <div class="details-left">
                    
<p class="title margin-top-0 margin-bottom-4">Date</p>
         
                     
    <p>@incident.Date</p>
                    
                    </div>

                <div class="details-right">

                    
    <p class="title margin-top-0 margin-bottom-4">Time</p>
            
                <p>@incident.Time</p>
                </div>
                
    <p class="margin-top-14 title">Incident</p>
    <p>@incident.Description</p>
</a>
}

                </div>

              <button class="button-bottom">Add Report</button>
            </div>

   